        </shape>
    </item>

    <!-- Background -->

    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="40%"
            android:pivotY="40%">
            <shape android:shape="rectangle">
                <solid android:color="@color/black" />
            </shape>
        </rotate>
    </item>

</layer-list>