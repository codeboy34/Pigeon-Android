<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingStart="@dimen/margin16"
    android:paddingEnd="@dimen/margin16"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">


    <com.pigeonmessenger.widget.AvatarView
        android:id="@+id/search_avatar_iv"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginEnd="@dimen/margin16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:layout_marginEnd="8dp"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                tools:text="Code boy" />

            <TextView
                android:id="@+id/search_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_light"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp"
                tools:text="yesterday" />
        </LinearLayout>

        <TextView
            android:id="@+id/search_msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="3dp"
            android:maxLines="1"
            android:textSize="13sp"
            android:text="Hello There"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="?android:attr/textColorSecondary" />
    </LinearLayout>

</LinearLayout>