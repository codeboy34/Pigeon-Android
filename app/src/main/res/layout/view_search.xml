<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:background="@drawable/mixin_ripple"
        android:id="@+id/left_ib">

        <com.pigeonmessenger.widget.PigeonCircleImageView
            android:id="@+id/avatar_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="10dp"
            android:padding="2dp"
            android:src="@drawable/avatar_contact"
            app:border_color="@color/black"
            app:border_width="1dp"
            tools:ignore="ContentDescription"/>
    </FrameLayout>


    <ImageButton
        android:id="@+id/back_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:background="@drawable/mixin_ripple"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:padding="8dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        tools:ignore="ContentDescription"/>

    <ImageButton
        android:id="@+id/right_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:background="@drawable/mixin_ripple"
        android:padding="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        app:srcCompat="@drawable/ic_edit"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/search_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="50dp"
        android:minHeight="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_search"
        android:fontFamily="@font/sf_pro_light"
        android:hint="@string/search_hint"
        android:gravity="center_vertical"
        android:paddingEnd="24dp"
        android:paddingStart="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/text_light_gray"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/search_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:drawablePadding="6dp"
        android:hint="@string/search_hint"
        android:textCursorDrawable="@drawable/edittext_cursor_drawable"
        android:imeOptions="actionSearch|flagNoExtractUi"
        android:inputType="text"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:paddingEnd="24dp"
        android:paddingStart="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_50"
        android:textSize="14sp"
        android:minHeight="40dp"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/right_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:visibility="gone"
        android:background="@drawable/mixin_ripple"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="4dp"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_close_black_24dp"
        tools:ignore="ContentDescription"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:background="@color/divider"/>

</FrameLayout>